{
	"name": "clashplayer",
	"version": "1.0.0",
	"license": "GPL-3.0-or-later",
	"main": "src/index.js",
	"devDependencies": {
		"@svgr/webpack": "^6.5.1",
		"@wordpress/data": "^7.6.0",
		"@wordpress/icons": "^9.14.0",
		"@wordpress/scripts": "^24.6.0",
		"eslint-config-airbnb": "^19.0.4",
		"node-sass": "^8.0.0"
	},
	"scripts": {
		"watch": "node-sass ./src/sass/ -o ./ --source-map true --output-style expanded --indent-type tab --indent-width 1 -w",
		"start": "wp-scripts start",
		"build": "wp-scripts build",
		"format:js": "wp-scripts format-js",
		"lint:js": "wp-scripts lint-js './src/js/*.js'",
		"lint:css": "wp-scripts lint-style './src/sass/*.scss'",
		"compile:css": "node-sass src/sass/ -o ./build/ && stylelint && postcss '*.scss' --fix || true && stylelint && postcss '*.scss' --fix"
	},
	"dependencies": {
		"@csstools/postcss-sass": "^5.0.1",
		"@wordpress/block-editor": "^10.5.0",
		"@wordpress/blocks": "^11.21.0",
		"@wordpress/components": "^22.1.0",
		"@wordpress/hooks": "^3.22.0",
		"@wordpress/i18n": "^4.22.0",
		"autoprefixer": "^10.4.13",
		"postcss-preset-env": "^7.8.3",
		"postcss-scss": "^4.0.6",
		"react": "^17.0.2",
		"stylelint": "^14.16.1"
	},
	"browserslist": [
		"> 1%",
		"last 2 versions",
		"not ie <= 8"
	]
}
